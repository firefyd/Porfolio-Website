---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects');
const sortedProjects = allProjects.sort((a, b) => 
  b.data.pubDate.getTime() - a.data.pubDate.getTime()
);
---

<BaseLayout 
  title="Projects | Joshua Phillips" 
  description="Explore my data science projects including machine learning, data analysis, and visualizations."
>
  <div class="max-w-6xl mx-auto px-4 py-16">
    <div class="mb-12">
      <h1 class="text-4xl font-bold text-light mb-4">Projects</h1>
      <p class="text-xl text-light-secondary">
        A collection of my data science work, showcasing various techniques and technologies.
      </p>
    </div>

    {sortedProjects.length === 0 ? (
      <div class="bg-dark-secondary p-12 rounded-lg text-center">
        <p class="text-light-secondary text-lg">
          No projects yet. Check back soon!
        </p>
      </div>
    ) : (
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {sortedProjects.map((project) => (
          <a 
            href={`/projects/${project.slug}`}
            class="bg-dark-secondary p-6 rounded-lg hover:bg-dark-tertiary transition block"
          >
            <div class="mb-4">
              <h2 class="text-2xl font-semibold text-light mb-2">
                {project.data.title}
              </h2>
              <p class="text-orange text-sm mb-2">
                {project.data.subtitle}
              </p>
              <p class="text-light-tertiary text-sm">
                {new Date(project.data.pubDate).toLocaleDateString('en-US', { 
                  year: 'numeric', 
                  month: 'long', 
                  day: 'numeric' 
                })}
              </p>
            </div>
            
            <p class="text-light-secondary mb-4">
              {project.data.description}
            </p>
            
            <div class="flex flex-wrap gap-2 mb-4">
              {project.data.tags.map((tag) => (
                <span class="text-xs bg-dark-tertiary text-light-secondary px-2 py-1 rounded">
                  {tag}
                </span>
              ))}
            </div>

            {project.data.github && (
              <div class="flex items-center gap-2 text-orange text-sm">
                <span>View on GitHub â†’</span>
              </div>
            )}
          </a>
        ))}
      </div>
    )}
  </div>
</BaseLayout>