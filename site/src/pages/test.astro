---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Test Page | ">
  <div class="max-w-4xl mx-auto p-8">
    <h1 class="text-4xl font-bold text-purple mb-4">Purple Heading</h1>
    <h2 class="text-2xl text-green mb-4">Green Heading</h2>
    <p class="text-light mb-2">Primary text color (light)</p>
    <p class="text-light-secondary mb-2">Secondary text color (gray)</p>
    
    <div class="flex gap-4 mt-6">
      <button class="bg-purple hover:bg-purple-700 text-white px-4 py-2 rounded transition">
        Purple Button
      </button>
      <button class="bg-green hover:bg-green-700 text-white px-4 py-2 rounded transition">
        Green Button
      </button>
    </div>
    
    <div class="mt-6 p-4 bg-dark-secondary rounded">
      <code class="font-mono text-green-400">Code with JetBrains Mono and green accent</code>
    </div>
    
    <!-- Color palette showcase -->
    <div class="mt-8">
      <h3 class="text-xl font-semibold text-light mb-4">Color Palette</h3>
      <div class="grid grid-cols-5 gap-2">
        <div class="bg-purple-50 h-12 rounded"></div>
        <div class="bg-purple-200 h-12 rounded"></div>
        <div class="bg-purple-400 h-12 rounded"></div>
        <div class="bg-purple-600 h-12 rounded"></div>
        <div class="bg-purple-900 h-12 rounded"></div>
      </div>
      <div class="grid grid-cols-5 gap-2 mt-2">
        <div class="bg-green-50 h-12 rounded"></div>
        <div class="bg-green-200 h-12 rounded"></div>
        <div class="bg-green-400 h-12 rounded"></div>
        <div class="bg-green-600 h-12 rounded"></div>
        <div class="bg-green-900 h-12 rounded"></div>
      </div>
    </div>
  </div>
</BaseLayout>