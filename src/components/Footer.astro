---
import ThemeToggle from "./ThemeToggle.svelte";

const currentYear = new Date().getFullYear();

const socialLinks = [
	{ name: "GitHub", href: "https://github.com/firefyd", icon: "github" },
	{
		name: "LinkedIn",
		href: "https://www.linkedin.com/in/joshua-phillips-193b52245/",
		icon: "linkedin",
	},
];
---

<footer class="bg-bg-secondary border-t border-border-main mt-auto">
	<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
		<div class="flex flex-col md:flex-row justify-between items-center gap-4">
			<p class="text-text-secondary text-sm">
				Â© {currentYear} Joshua Phillips. All rights reserved.
			</p>

			<div class="flex items-center gap-6">
				{
					socialLinks.map((link) => (
						<a
							href={link.href}
							target="_blank"
							rel="noopener noreferrer"
							class="text-text-secondary hover:text-accent transition focus-visible-ring"
							aria-label={link.name}
						>
							{link.name}
						</a>
					))
				}
				<div class="w-px h-4 bg-border-main"></div>
				<ThemeToggle client:load />
			</div>
		</div>
	</div>
</footer>
