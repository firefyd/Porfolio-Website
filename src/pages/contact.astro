---
import ContactForm from "../components/ContactForm.svelte";
import BaseLayout from "../layouts/BaseLayout.astro";
import SocialIcon from "../components/icons/SocialIcon.astro"; // Import the icon component
---

<BaseLayout
	title="Contact | Joshua Phillips"
	description="Get in touch with me about opportunities, collaborations, or questions."
>
	<div class="max-w-3xl mx-auto px-4 py-16">
		<h1 class="text-4xl font-bold text-text-main mb-4">Get In Touch</h1>
		<p class="text-xl text-text-secondary mb-12">
			I'm always open to discussing data science opportunities, collaborations, or general
			discussion.
		</p>

		<div class="grid md:grid-cols-2 gap-12 mb-12">
			<div>
				<h2 class="text-2xl font-semibold text-accent mb-6">Contact Information</h2>

				<div class="space-y-4">
					<div class="flex items-start gap-3">
						<div class="mt-1">
							<SocialIcon name="github" />
						</div>
						<div>
							<h3 class="text-text-main font-medium mb-1">GitHub</h3>
							<a
								href="https://github.com/firefyd"
								target="_blank"
								rel="noopener noreferrer"
								class="text-text-secondary hover:text-accent transition focus-visible-ring"
							>
								github.com/firefyd
							</a>
						</div>
					</div>

					<div class="flex items-start gap-3">
						<div class="mt-1">

							<SocialIcon name="linkedin" />
						</div>
						<div>
							<h3 class="text-text-main font-medium mb-1">LinkedIn</h3>
							<a
								href="https://www.linkedin.com/in/joshua-phillips-193b52245/"
								target="_blank"
								rel="noopener noreferrer"
								class="text-text-secondary hover:text-accent transition focus-visible-ring"
							>
								Joshua Phillips
							</a>
						</div>
					</div>
				</div>
			</div>

			<div>
				<h2 class="text-2xl font-semibold text-accent mb-6">Send a Message</h2>

				<ContactForm client:only="svelte" />
			</div>
		</div>
	</div>
</BaseLayout>