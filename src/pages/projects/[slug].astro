---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
	const projects = await getCollection("projects");
	return projects.map((project) => ({
		params: { slug: project.slug },
		props: { project },
	}));
}

const { project } = Astro.props;
const { Content } = await project.render();


const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": project.data.title,
  "description": project.data.description,
  "url": Astro.url.href,
  "datePublished": project.data.pubDate.toISOString(),
  "author": {
    "@type": "Person",
    "name": "Joshua Phillips",
    "url": "https://joshphillips.dev/about" // Assuming this is the correct URL
  }
};
---

<BaseLayout
	title={`${project.data.title} | Joshua Phillips`}
	description={project.data.description}
	type="article"
>
	<script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />
	<article class="max-w-4xl mx-auto px-4 py-16">
		<header class="mb-12">


			<h1 class="text-4xl font-bold text-text-main mb-3">
				{project.data.title}
			</h1>

			<p class="text-xl text-accent mb-4">
				{project.data.subtitle}
			</p>

			<div class="flex items-center gap-4 text-text-secondary text-sm mb-6">
				<time datetime={project.data.pubDate.toISOString()}>
					{
						new Date(project.data.pubDate).toLocaleDateString("en-US", {
							year: "numeric",
							month: "long",
						})
					}
				</time>
			</div>
			{
				project.data.github && (
					<a
						href={project.data.github}
						target="_blank"
						rel="noopener noreferrer"
						class="inline-flex items-center gap-2 bg-accent hover:bg-accent-hover text-white px-4 py-2 rounded transition focus-visible-ring"
					>
						View on GitHub
					</a>
				)
			}
		</header>

		<div class="prose max-w-none">
			<Content />
		</div>
	</article>
</BaseLayout>
