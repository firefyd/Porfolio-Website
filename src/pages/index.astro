---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";

const allProjects = await getCollection("projects");
const featuredProjects = allProjects.slice(0, 3);
---

<BaseLayout title="Joshua Phillips">
	<div class="max-w-4xl mx-auto px-4 py-16">
		<section class="mb-24">
			<h1 class="text-5xl font-bold text-text-main mb-4">Joshua Phillips</h1>
			<h2 class="text-2xl font-semibent text-accent mb-4">Data Scientist</h2>
			<div class="text-text-secondary text-lg leading-relaxed space-y-4">
				I am a Data Scientist with extensive knowledge in statistical modeling, machine learning, and data infrastructure, holding a Master of Data Science with Excellence from the University of New South Wales. 
				
				I am proficient across the modern data stack, primarily focused on python and cloud computing. 
				<p><p>
				My technical experience is complemented by community and leadership roles, including serving as Club Captain for Campbells Bay Tennis Club and acting as an Interclub committee member at Tennis Northern. 

			</div>
			<p class="text-xl text-text-secondary max-w-3xl mb-8">
				
			</p>

			<div class="flex gap-4">
				<a
					href="/about"
					class="border border-accent text-accent hover:bg-accent hover:text-bg-main px-6 py-3 rounded transition font-medium focus-visible-ring btn-interactive"				>
					About Me
				</a>

				<a
					href="/contact"
					class="border border-accent text-accent hover:bg-accent hover:text-bg-main px-6 py-3 rounded transition font-medium focus-visible-ring btn-interactive"
				>
					Contact
				</a>
			</div>
		</section>


		{
			featuredProjects.length > 0 && (
				<section>
					<div class="flex justify-between items-center mb-8">
						<h2 class="text-3xl font-bold text-text-main">Featured Projects</h2>
						<a 
							href="/projects" 
							class="link-arrow text-accent hover:text-accent-hover transition font-medium focus-visible-ring"
						>
							View All <span class="arrow">â†’</span>
						</a>
					</div>

					<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
						{featuredProjects.map((project) => (
							<a
								href={`/projects/${project.slug}`}
								class="bg-bg-secondary p-6 rounded-lg shadow-card hover-lift-glow hover:bg-border-main transition block"
							>
								<h3 class="text-xl font-semibold text-text-main mb-2">{project.data.title}</h3>
								<p class="text-accent text-sm mb-3">{project.data.subtitle}</p>
								<p class="text-text-secondary mb-4">{project.data.description}</p>
							
							</a>
						))}
					</div>
				</section>
			)
		}
	</div>
</BaseLayout>
